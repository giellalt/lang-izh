! Vws %>:0 %^LCns: V1:
! Vowel agreement in illative 
"V1:aeouüäo"
V1:Vx <=> Vx %>:0 [ h | ( %^LCns: ) ] _ ;
        where Vx in (a o u ä ö ü) ;

! Vowel agreement in illative e
"V1:e"
V1:e <=> [ e | i ] %>:0 [ h | ( %^LCns: ) ] _ ;


! ! Vowel Lengthening
! mato : mattoon, mato : maool
 "Zero:Vx"
 0:Vx <=> Vx _ %>:0 ( %^LCns: | %^WCns: ) %^LVws: ;
       where Vx in (a o u ä ö ü) ; 


! Secondary Consonant lengthening
! mato : mattoo
!"even-syllable"
"t:tt"
 0:Cx <=> Cns* Vws Cx _ Vws ( 0: ) %>:0 %^LCns:0  ;
           where Cx in (t) ;

